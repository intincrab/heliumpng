---
const { platform, username } = Astro.props;
---

<a class="my-link" href={`https://www.${platform}.com/${username}`}
  >{platform}</a
>
<style>
  .my-link {
    display: inline-block;
    padding: 0.5rem;
    background: #ffa7c4;
    color: rgb(0, 0, 0);
    text-decoration: none;
    transition: all 0.3s ease-in-out;
    font-family: monospace;
    margin: 2px;
    margin-left: auto;
  }

  .my-link:hover {
    background: #fff;
    color: #000000;
    box-shadow: 0 0 10px #000000;
    text-decoration: none;
  }

  .my-link:visited {
    color: black;
  }
</style>
