---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import "../styles/global.css";
const { pageTitle } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta
      name="heliumpng"
      content="My name is Ajay Chauhan (pronounced as /uh·juh·y/). On the web you can
    find me under the username <u>intincrab</u> and <u>heliumpng</u>. I’m 18
    years old and my pronouns are he/him. I live in Dehradun, India.heliumpng, arcticlangoor"
    />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{pageTitle}</title>
  </head>
  <body>
    <Header />
    <h1>{pageTitle}</h1>
    <slot />
    <Footer />
    <script>
      import "../scripts/menu.js";
    </script>
  </body>
</html>
