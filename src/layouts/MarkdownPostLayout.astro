---
import BasicLayout from "./BaseLayout.astro";
const { frontmatter } = Astro.props;
---

<BasicLayout pageTitle={frontmatter.title}>
  <p><svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4" style="width: 16px; height: 16px;">
    <path stroke-linecap="round" stroke-linejoin="round" d="M6.75 3v2.25M17.25 3v2.25M3 18.75V7.5a2.25 2.25 0 012.25-2.25h13.5A2.25 2.25 0 0121 7.5v11.25m-18 0A2.25 2.25 0 005.25 21h13.5A2.25 2.25 0 0021 18.75m-18 0v-7.5A2.25 2.25 0 015.25 9h13.5A2.25 2.25 0 0121 11.25v7.5"></path>
  </svg>
  {frontmatter.pubDate.slice(0, 10)}</p>
  <p><em>{frontmatter.description}</em></p>
  <p>Written by {frontmatter.author}</p>
  <img src={frontmatter.image.url} width="300" alt={frontmatter.image.alt} />
  <div class="tags">
    {
      frontmatter.tags.map((tag) => (
        <p class="tag">
          <a href={`/tags/${tag}`}>{tag}</a>
        </p>
      ))
    }
  </div>
  <slot />
</BasicLayout>
<style>
  a {
    color: #000000;
    text-decoration: none;
    font-family: monospace;
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
    margin: 0 auto;
  }

  .tag {
    margin: 0.15em;
    border-radius: 0.6em;
    padding: 0.1em 0em;
    font-size: 1.03em;
    display: inline-block;
    padding: 0.5rem;
    color: rgb(0, 0, 0);
    transition: all 0.3s ease-in-out;
    background-color: #ffa7c4;
    position: relative;
  }

  .tag::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(
      90deg,
      rgba(255, 255, 255, 0) 0%,
      rgba(255, 255, 255, 0.8) 50%,
      rgba(255, 255, 255, 0) 100%
    );
    opacity: 0;
    transition: opacity 0.2s linear;
    background-color: #ffa7c4; 
   }

  .tag:hover::before {
    opacity: 0.5;
  }

  .tag:hover {
    background: #ffffff;
    color: #000000;
    box-shadow: 0 0 8px #000000;
  }
  .tag a {
    color: #000000;
  }
</style>
